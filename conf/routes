# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ProductController.index
POST    /addproduct                 controllers.ProductController.addProduct
POST    /users/adduser              controllers.UserController.addUser
GET     /users                      controllers.UserController.index
POST    /reviews/addreview          controllers.ReviewController.addReview
GET     /reviews                    controllers.ReviewController.index


GET    /api/getProducts            controllers.ProductController.getProducts
GET     /api/getCategories           controllers.CategoryController.getCategories
POST    /api/getCategories           controllers.CategoryController.getCategories
POST    /api/getCart                controllers.CartController.getCart
POST    /api/getByKeyword           controllers.ProductController.getByKeyword


#oauth2

GET         /signOut                         controllers.ApplicationController.signOut
GET         /authenticate/:provider          controllers.SocialAuthController.authenticat

GET         /signIn                          controllers.SignInController.view
POST        /signIn                          controllers.SignInController.submit

GET         /account/email/:email            controllers.ActivateAccountController.send(email: String)
GET         /account/activate/:token         controllers.ActivateAccountController.activate(token: java.util.UUID)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
->          /webjars                         webjars.Routes
